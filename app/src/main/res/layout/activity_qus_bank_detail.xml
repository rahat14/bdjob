<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerId_qus_bank_post_detail"
    tools:context=".Voc_post_detail">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        android:orientation="vertical"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_qustionBank_Top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"
                >
            </com.google.android.gms.ads.AdView>
            <TextView
                android:id="@+id/titleTv_qus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="#000"
                android:fontFamily="@font/lip"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/descriptionTv_qus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lip"
                android:text="This will be the description of the post"
                android:textSize="18sp"
                />
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView_qustionBank_Below"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"
                >
            </com.google.android.gms.ads.AdView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </android.support.v7.widget.CardView>



    <android.support.design.widget.NavigationView
        android:id="@+id/NAVVIew_ID_Qus_Bank_Deatil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_menu"
        app:itemBackground="@drawable/menu_item_background"
        android:focusable="true">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>